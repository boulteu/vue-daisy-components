{
  "name": "vue-daisy-table",
  "version": "0.2.0",
  "description": "A beautiful and optimized Vue 3 DataTable component styled with Tailwind CSS and DaisyUI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint src --ext .vue,.js,.ts,.jsx,.tsx --fix"
  },
  "keywords": [
    "vue",
    "vue3",
    "datatable",
    "tailwind",
    "daisyui",
    "table",
    "pagination",
    "vue-component",
    "typescript",
    "optimized",
    "export",
    "selection"
  ],
  "author": "Boulteu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boulteu/vue-daisy-table.git"
  },
  "peerDependencies": {
    "vue": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "daisyui": "^4.0.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "vite-svg-loader": "^5.1.0",
    "typescript": "^5.2.0",
    "vue-tsc": "^1.8.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "daisyui": "^4.0.0",
    "@types/node": "^20.0.0"
  }
}
